function minus($a, $b) {
	$len = strlen($a) > strlen($b) ?  strlen($a) : strlen($b);
	
	/// 反转字符串
	$ar = strrev($a);
	$br = strrev($b);

	$result = '';
	for($i = 0 ;$i < $len; $i++) {
		//从个位开始减，缺的补0 
		$temp = (empty($ar[$i]) ? 0 : $ar[$i]) - (empty($br[$i]) ? 0 : $br[$i]);
		if (!empty($borrowOne)) {
			//当后一位借一时减一
			$temp -= 1;
		}
		
		$borrowOne = false;
		if ($temp < 0) {
			/// 如果结果是负数 向前借一 做标记
			$borrowOne = true;
			$temp += 10;
		}
		$result = $temp . $result;
	}
	
	return $result;
}

echo minus(321312312312313123131231231232,13) . '<br>';
echo 321312312312313123131231231232 -13;

结果：
3021312312312310016
3.2131231231231E+29
